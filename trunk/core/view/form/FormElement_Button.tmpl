{extends "core/view/form/FormElement.tmpl"}

{block name="field"}

<button class="button {$inputClass} {$class}" type="{$type}" name="{$htmlName}" id="{$htmlId}" {if $onclick}onclick="{$onclick}"{/if} {if $title}title="{Label $title}"{/if}>
	{if ! $noIcon}
		<span class="icon"></span>
	{/if}
	<span class="label">{Label $text}</span>
	<span class="rgt"></span>
</button>

{/block}