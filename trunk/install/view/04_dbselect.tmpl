{extends main.tmpl}

{block name="box"}
		{if $hasError == 1}
			<strong>Database creation / select failed please correct the setup</strong>
		{else}
			<span class="title">
				<span style="padding:0 0 0 30px; width:300px;" class="servercheckicon ok">
					Database server connection validated.
				</span>
			</span> 
		{/if}
		<br />
		<table width="500" border="0" cellspacing="0" cellpadding="3">
			<tr>
				<td width="109">Select a Database</td>
				<td width="379">
					<select name="database" type="text" id="database" value="{$fields.server}">
			{foreach $options key option}
						<option value="{$key}"{if $option.disabled} disabled="true"{/if}>{$option.text}</option>
			{/foreach}
					</select>	 
				</td>
			</tr>
			<tr>
				<td>or create new:</td>
				<td>
					<input onkeyup="TodoyuInstaller.checkDbSelect()" type="text" id="database_new" name="database_new" />
					<span id="error-newnameTaken" style="display:none;" class="error">This name is already taken!</span>
				</td>
			</tr>
		</table>
{/block}