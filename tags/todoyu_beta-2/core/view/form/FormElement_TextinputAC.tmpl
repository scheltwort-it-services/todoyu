	<input type="hidden" name="{$htmlName}" id="{$htmlId}" value="{$default}" />
	<div id="{$htmlId}-suggest" class="acResultContainer"></div>
	<script type="text/javascript">
		Todoyu.Autocomplete.install('{$htmlId}', {$acConfigJson});
	</script>
{/block}